<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="preview-pane" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cvbuilder.PreviewScreenController">

    <top>
        <VBox alignment="CENTER" spacing="6" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="30" right="30" top="20" />
            </padding>
            <Label fx:id="nameLabel" styleClass="preview-name"/>
            <Separator />
        </VBox>
    </top>

    <center>
        <StackPane alignment="TOP_CENTER">
            <children>
                <VBox prefWidth="794.0" styleClass="preview-content">
                    <children>
                        <HBox fillHeight="true" maxWidth="794.0" spacing="18">
                            <padding>
                                <Insets bottom="24" left="24" right="24" top="16" />
                            </padding>

                            <VBox maxWidth="240.0" prefWidth="220.0" spacing="12" styleClass="preview-sidebar">
                                <padding>
                                    <Insets bottom="16" left="16" right="16" top="16" />
                                </padding>

                                <StackPane alignment="CENTER" styleClass="photo-box-preview">
                                    <ImageView fx:id="profilePhotoView" fitWidth="180" preserveRatio="true" />
                                </StackPane>

                                <Separator />
                                <Label styleClass="section-heading" text="Skills" />
                                <Label fx:id="skillsLabel" styleClass="preview-text" wrapText="true" />

                                <Separator />
                                <Label styleClass="section-heading" text="Contacts" />
                                <Label fx:id="emailLabel" styleClass="preview-contact" wrapText="true" />
                                <Label fx:id="phoneLabel" styleClass="preview-contact" wrapText="true" />
                                <Label fx:id="addressLabel" styleClass="preview-contact" wrapText="true" />
                            </VBox>

                            <VBox spacing="16" styleClass="preview-main" HBox.hgrow="ALWAYS">
                                <Label styleClass="section-heading" text="Education" />
                                <Label fx:id="educationLabel" styleClass="preview-text" wrapText="true" />
                                <Separator />

                                <Label styleClass="section-heading" text="Work Experience" />
                                <Label fx:id="experienceLabel" styleClass="preview-text" wrapText="true" />
                                <Separator />

                                <Label styleClass="section-heading" text="Projects" />
                                <Label fx:id="projectsLabel" styleClass="preview-text" wrapText="true" />
                            </VBox>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="header-bar">
            <padding>
                <Insets bottom="20" left="30" right="30" top="12" />
            </padding>
            <Button onAction="#handleBackToForm" text="&lt; Back to Edit" />
        </HBox>
    </bottom>

</BorderPane>