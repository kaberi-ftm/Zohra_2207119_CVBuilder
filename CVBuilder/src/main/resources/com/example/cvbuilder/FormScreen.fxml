<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cvbuilder.FromScreenController">

    <top>
        <Label text="Enter Your Details" styleClass="heading-label" alignment="CENTER">
            <BorderPane.margin>
                <Insets top="20" bottom="20"/>
            </BorderPane.margin>
        </Label>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="15">
                <padding>
                    <Insets left="50" right="50" />
                </padding>

                <Label text="Personal Information" styleClass="section-heading"/>

                <GridPane vgap="10" hgap="10">
                    <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="fullNameField" promptText="e.g., John Doe" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Email Address:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="emailAddressField" promptText="e.g., john@email.com" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Phone Number:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="phoneField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Address:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="addressField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <columnConstraints>
                        <ColumnConstraints percentWidth="30.0"/>
                        <ColumnConstraints percentWidth="70.0"/>
                    </columnConstraints>
                </GridPane>

                <Label text="Educational Qualifications" styleClass="section-heading"/>
                <TextArea fx:id="educationField" promptText="e.g., B.Sc in CSE..."/>

                <Label text="Skills" styleClass="section-heading"/>
                <TextArea fx:id="skillsField" promptText="e.g., Java, Python..."/>

                <Label text="Work Experience" styleClass="section-heading"/>
                <TextArea fx:id="experienceField"/>

                <Label text="Projects" styleClass="section-heading"/>
                <TextArea fx:id="projectsField"/>
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="20" right="50" bottom="20" left="50"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>
