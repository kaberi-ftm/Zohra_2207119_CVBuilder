<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cvbuilder.FormScreenController">

    <top>
        <Label text="Enter Your Details" styleClass="heading-label" alignment="CENTER" maxWidth="Infinity" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="20" bottom="20"/>
            </BorderPane.margin>
        </Label>
    </top>

    <center>
        <ScrollPane fx:id="scrollRoot" fitToWidth="true" pannable="true">
            <content>
                <StackPane alignment="TOP_CENTER">
                    <children>
                    <VBox spacing="16" maxWidth="520.0" styleClass="mobile-card">
                        <FlowPane fx:id="topFlow" hgap="16" vgap="16" prefWrapLength="520">
                        <children>
                            <VBox styleClass="card" spacing="12" minWidth="360.0" prefWidth="560.0">
                                <Label text="Personal Information" styleClass="section-heading"/>
                                <GridPane vgap="12" hgap="12">
                                    <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <TextField fx:id="fullNameField" promptText="e.g., John Doe" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>

                                    <Label text="Email Address:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <TextField fx:id="emailAddressField" promptText="e.g., john@email.com" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>

                                    <Label text="Phone Number:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                    <TextField fx:id="phoneField" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>

                                    <Label text="Address:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                    <TextField fx:id="addressField" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>

                                    <columnConstraints>
                                        <ColumnConstraints minWidth="140.0" halignment="RIGHT"/>
                                        <ColumnConstraints hgrow="ALWAYS"/>
                                    </columnConstraints>
                                </GridPane>
                            </VBox>

                            <VBox fx:id="sideControlsBox" styleClass="card" spacing="12" minWidth="260.0" prefWidth="320.0">
                                <Label text="Photo &amp; Options" styleClass="section-heading"/>
                                <ImageView fx:id="photoPreview" fitWidth="220" preserveRatio="true"/>
                                <Button text="Upload Photo" onAction="#handleUploadPhoto" />
                                <Label text="Accent" />
                                <ChoiceBox fx:id="accentChoice">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Blue" />
                                            <String fx:value="Teal" />
                                            <String fx:value="Purple" />
                                            <String fx:value="Crimson" />
                                        </FXCollections>
                                    </items>
                                </ChoiceBox>
                                <Label text="Design" />
                                <ChoiceBox fx:id="designChoice">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Sidebar" />
                                            <String fx:value="Classic" />
                                        </FXCollections>
                                    </items>
                                </ChoiceBox>

                                <!-- Theme preview removed per feedback -->

                                <VBox spacing="8">
                                    <Label text="Design Preview" />
                                    <StackPane>
                                        <children>
                                            <HBox fx:id="designPreviewSidebar" spacing="6" alignment="CENTER_LEFT">
                                                <Region styleClass="card mock-block" prefHeight="36.0" prefWidth="12.0" maxWidth="12.0"/>
                                                <Region styleClass="card mock-block" prefHeight="36.0" prefWidth="120.0"/>
                                            </HBox>
                                            <HBox fx:id="designPreviewClassic" spacing="6" alignment="CENTER_LEFT" visible="false" managed="false">
                                                <Region styleClass="card mock-block" prefHeight="36.0" prefWidth="136.0"/>
                                            </HBox>
                                        </children>
                                    </StackPane>
                                </VBox>
                            </VBox>
                        </children>
                    </FlowPane>

                    <VBox spacing="12">
                        <VBox styleClass="card" spacing="8">
                            <Label text="Educational Qualifications" styleClass="section-heading"/>
                            <TextArea fx:id="educationField" promptText="e.g., B.Sc in CSE..." prefRowCount="3" maxWidth="Infinity"/>
                        </VBox>
                        <VBox styleClass="card" spacing="8">
                            <Label text="Skills" styleClass="section-heading"/>
                            <TextArea fx:id="skillsField" promptText="e.g., Java, Python..." prefRowCount="3" maxWidth="Infinity"/>
                        </VBox>
                        <VBox styleClass="card" spacing="8">
                            <Label text="Work Experience" styleClass="section-heading"/>
                            <TextArea fx:id="experienceField" prefRowCount="4" maxWidth="Infinity"/>
                        </VBox>
                        <VBox styleClass="card" spacing="8">
                            <Label text="Projects" styleClass="section-heading"/>
                            <TextArea fx:id="projectsField" prefRowCount="4" maxWidth="Infinity"/>
                        </VBox>
                    </VBox>
                    </VBox>
                    </children>
                </StackPane>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="16" right="30" bottom="16" left="30"/>
            </padding>
            <Button text="Home" onAction="#handleBackHome" />
            <Button text="Generate CV" onAction="#handleGenerateCV" />
        </HBox>
    </bottom>
</BorderPane>
